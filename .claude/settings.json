{
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "./.claude/claude_code_web_setup.sh",
            "timeout": 600
          },
          {
            "type": "command",
            "command": "./playwright_mcp_claude_code_web/setup.sh",
            "timeout": 600
          }
        ]
      }
    ]
  },
  "enableAllProjectMcpServers": true,
  "permissions": {
    "allow": [
      "mcp__playwright"
    ]
  }
}
